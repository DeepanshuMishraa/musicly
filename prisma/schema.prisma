generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  provider      String
  authoredSpaces Space[] @relation("AuthorSpaces")
}

model Space {
  id          String   @id @default(uuid())
  name        String
  description String
  authorId    String
  author      User     @relation("AuthorSpaces", fields: [authorId], references: [id])
  createdAt   DateTime @default(now())
  streams     Stream[]
}

model Stream {
  id           String   @id @default(uuid())
  title        String
  thumbnail    String
  url          String
  extractedurl String
  spaceId      String
  space        Space    @relation(fields: [spaceId], references: [id])
  createdAt    DateTime @default(now())
  startedAt    DateTime?
}
